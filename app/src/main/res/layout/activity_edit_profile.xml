<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brightNavyBlue"
    tools:context=".EditProfileActivity">


    <Button
        android:id="@+id/goBackButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/masterykingdom"
        android:onClick="goToHome"
        android:text="Go Back"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/saveEditButton"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginBottom="84dp"
        android:fontFamily="@font/masterykingdom"
        android:onClick="saveProfileEdits"
        android:text="Save"
        android:textAllCaps="false"
        android:textSize="@dimen/buttonFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="@dimen/loginETWidth"
        android:layout_height="@dimen/loginETHeight"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textSize="@dimen/editTextFont"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bioEditText"
        android:layout_width="350dp"
        android:layout_height="230dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="200dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="top"
        android:inputType="textPersonName"
        android:text="bio"
        android:textSize="@dimen/subTitleFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/stateEditText"
        android:layout_width="160dp"
        android:layout_height="@dimen/loginETHeight"
        android:layout_marginStart="20dp"
        android:layout_marginTop="190dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="State"
        android:textSize="@dimen/editTextFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/cityEditText"
        android:layout_width="160dp"
        android:layout_height="@dimen/loginETHeight"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:background="@color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="City"
        android:textSize="@dimen/editTextFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stateEditText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="117dp"
        android:layout_height="142dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profileicon" />

</androidx.constraintlayout.widget.ConstraintLayout>